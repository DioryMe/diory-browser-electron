{
  "name": "diory-browser-electron",
  "version": "0.3.7",
  "productName": "Diory - Digital Memory Browser",
  "main": "electron-main.js",
  "private": true,
  "dependencies": {
    "exifreader": "^3.11.2",
    "glob": "^7.1.6",
    "lodash": "^4.17.15",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^9.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "ui-box": "^3.3.0",
    "leaflet": "^1.6.0",
    "evergreen-ui": "^4.27.4",
    "@babel/core": "^7.10.2",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/polyfill": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@babel/register": "^7.10.1",
    "cross-env": "^7.0.2",
    "cucumber": "^6.0.5",
    "electron-builder": "^22.7.0",
    "electron-reload": "^1.5.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^7.1.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "husky": "^4.2.5",
    "jest-electron": "^0.1.11",
    "jsdom": "^16.2.2",
    "lint-staged": "^10.2.7",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5"
  },
  "homepage": "./",
  "scripts": {
    "start": "export BROWSER=none && PORT=3300 react-scripts start",
    "start-browser": "PORT=3301 react-scripts start",
    "start-electron": "export ELECTRON_START_URL=http://localhost:3300 && electron .",
    "build-and-start-electron": "yarn build && yarn build-electron && electron .",
    "start-electron-dev-tools": "DEV_TOOLS=true export ELECTRON_START_URL=http://localhost:3300 && cross-env nodemon --exec electron .",
    "start-win": "set BROWSER=none && react-scripts start",
    "start-electron-win": "set ELECTRON_START_URL=http://localhost:3300 && electron .",
    "clean": "rm -rf build dist",
    "clean-win": "rmdir build /S /Q & rmdir dist/S /Q",
    "build": "react-scripts build",
    "build-electron": "mkdir build/src && cp electron-main.js build && cp -r electron/. build/electron && cp -r src/shared/. build/src/shared",
    "build-electron-win": "mkdir build/src && robocopy electron build/electron /S & robocopy src/shared build/src/shared /S",
    "package-mac": "electron-builder build --mac -c.extraMetadata.main=build/electron-main.js --publish never",
    "package-linux": "electron-builder build --linux -c.extraMetadata.main=build/electron-main.js --publish never",
    "package-win": "electron-builder build --win -c.extraMetadata.main=build/electron-main.js --publish never",
    "eslint": "eslint ./{src,electron}/**/. --ext .js",
    "prettier": "prettier --write '{electron,src}/**/*.{js,jsx,json,css,scss,md}'",
    "test": "react-scripts test",
    "test-react": "react-scripts test",
    "test-electron": "jest --detectOpenHandles electron/**/*.js --watch --verbose",
    "cucumber": "./node_modules/.bin/cucumber-js src/react --no-strict -r src/react/utils/cucumber --require-module @babel/register --require-module @babel/polyfill",
    "cucumber-only": "./node_modules/.bin/cucumber-js src/react/features --tags @only -r src/react/utils/cucumber --require-module @babel/register --require-module @babel/polyfill",
    "eject": "react-scripts eject"
  },
  "build": {
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "publish": {
      "provider": "github",
      "repo": "diory-browser-electron",
      "owner": "dioryme"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 100
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "nodemonConfig": {
    "ignore": [
      "public/*",
      "docs/*"
    ],
    "delay": 2000
  },
  "lint-staged": {
    "{electron,src}/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
