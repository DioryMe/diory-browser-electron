{
  "name": "diory-browser-electron",
  "version": "0.2.1",
  "productName": "Diory - Digital Memory Browser",
  "main": "electron/main.js",
  "private": true,
  "dependencies": {
    "@babel/core": "^7.7.7",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "@babel/register": "^7.7.7",
    "chai": "^4.2.0",
    "cucumber": "^6.0.5",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "evergreen-ui": "^4.21.5",
    "expect": "^24.9.0",
    "husky": "^3.1.0",
    "jsdom": "^15.2.1",
    "leaflet": "^1.6.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.2.0",
    "ui-box": "^3.0.2",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "electron": "^7.1.2",
    "electron-builder": "^21.2.0"
  },
  "homepage": "./",
  "scripts": {
    "start": "export BROWSER=none && PORT=3300 react-scripts start",
    "start-electron": "export ELECTRON_START_URL=http://localhost:3300 && electron .",
    "start-electron-dev-tools": "DEV_TOOLS=true export ELECTRON_START_URL=http://localhost:3300 && electron .",
    "start-win": "set BROWSER=none && react-scripts start",
    "start-electron-win": "set ELECTRON_START_URL=http://localhost:3300 && electron .",
    "clean": "rm -rf build dist",
    "clean-win": "rmdir build /S /Q & rmdir dist/S /Q",
    "build": "react-scripts build",
    "build-electron": "mkdir build/src && cp -r electron/. build/electron && cp -r src/shared/. build/src/shared",
    "build-electron-win": "mkdir build/src && robocopy electron build/electron /S & robocopy src/shared build/src/shared /S",
    "package": "electron-builder build --mac --win -c.extraMetadata.main=build/electron/main.js --publish never",
    "lint": "eslint ./src/. --ext .js",
    "test": "react-scripts test",
    "cucumber": "./node_modules/.bin/cucumber-js src/react/features/**/*.feature -r src/react/utils/cucumber --require-module @babel/register --require-module @babel/polyfill",
    "cucumber-only": "./node_modules/.bin/cucumber-js src/react/features/**/*.feature --tags @only -r src/react/utils/cucumber --require-module @babel/register --require-module @babel/polyfill",
    "eject": "react-scripts eject"
  },
  "build": {
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "publish": {
      "provider": "github",
      "repo": "diory-browser-electron",
      "owner": "dioryme"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
